<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Halaman Groups</title>
  </head>
  <body>
    <table border="2px">
      <thead?>
        <tr>
        <td>ID</td>
        <td>Name Groups</td>
        <td>Action</td>
        </tr>
      </thead?>
      <tbody>
        <%dataGroups.forEach(row =>{ %>
          <tr>
            <td><%=row.id%></td>
            <td><%=row.name_of_group%></td>
            <td>
              <a href="/groups/edit/<%=row.id%>">Edit</a>
              <a href="/groups/delete/<%=row.id%>">Delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>

<form action="/groups" method="post">
  Group Names:<br>
  <input type="text" name="name_of_group" placeholder="Groups Names">
  <br>
  <input type="submit" value="Submit">
</form>
