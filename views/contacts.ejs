<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Contacts Data</title>
</head>

<body>
  <a href="/">back</a>
  <table style="width:50%" border='5'>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Company</th>
      <th>Telp Number</th>
      <th>Email</th>
      <th colspan="2">Action</th>
    </tr>
    <%
      for(var i=0;i<dataRows.length;i++){
    %>
      <tr align="center">
        <td><%= dataRows[i].id %></td>
        <td><%= dataRows[i].name %></td>
        <td><%= dataRows[i].company %></td>
        <td><%= dataRows[i].telp_number %></td>
        <td><%= dataRows[i].email %></td>
        <td><a href='/contacts/edit/<%= dataRows[i].id %>'>Edit</a></td>
        <td><a href="/contacts/delete/<%= dataRows[i].id %>">Delete</a></td>
      </tr>
    <%
    }
    %>
  </table>
  <br />
  <form action="/contacts" method="post">
    Name :<br>
    <input type="text" name="name" placeholder="Your Name">
    <br> Company:
    <br>
    <input type="text" name="company" placeholder="Your Company">
    <br> Telp Number:<br>
    <input type="text" name="telp_number" placeholder="Your Telp Number">
    <br> Email:
    <br>
    <input type="text" name="email" placeholder="Your Email Address">
    <br>
    <input type="submit" value="Submit">
  </form>
  <br />
</body>

</html>
